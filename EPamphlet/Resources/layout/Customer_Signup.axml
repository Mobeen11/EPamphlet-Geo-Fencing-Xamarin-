<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:text="Name:" />
    <EditText
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text1"
        android:layout_alignBottom="@+id/text1"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/text1"
        android:ems="10"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text1"
        android:layout_below="@+id/customer_name"
        android:layout_marginTop="75dp"
        android:text="Username:"
        android:textStyle="bold"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/customer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/customer_name"
        android:ems="10"
        android:textSize="20dp"
        android:layout_marginRight="5dp" />
    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_username"
        android:id="@+id/textView3"
        android:layout_marginTop="75dp"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/customer_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/customer_username"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:layout_marginRight="5dp" />
    <Button
        android:id="@+id/customer_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/customer_password"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/customer_password"
        android:layout_marginTop="85dp"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:background="@color/primary" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_password"
        android:id="@+id/progressBar3"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:indeterminate="true"
        android:visibility="invisible" />
</RelativeLayout>